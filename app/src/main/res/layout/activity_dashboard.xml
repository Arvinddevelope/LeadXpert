<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:paddingTop="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal" />

        <!-- ✅ Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your lead performance at a glance"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />


        <!-- Stats Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp">

            <!-- Today -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_lead_card"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444"/>

                <TextView
                    android:id="@+id/tvTodayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Yesterday -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_lead_card"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yesterday"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444"/>

                <TextView
                    android:id="@+id/tvYesterdayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FF7043"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- This Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_lead_card"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMonthCount"
                    android:text="30"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#43A047"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Total Leads -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/bg_lead_card"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Leads"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#444"/>

                <TextView
                    android:id="@+id/tvTotalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="124"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#8E24AA"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </GridLayout>

        <!-- Graph View Placeholder -->
        <ImageView
            android:id="@+id/ivGraph"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bar_chart"
            android:contentDescription="Graph Placeholder"/>

        <!-- Quick Actions -->
        <Button
            android:id="@+id/addLeadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Add New Lead"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/viewLeadsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 View All Leads"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/openReportsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 View Reports" />

        <Button
            android:id="@+id/openProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 My Profile"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/openSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Settings"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
